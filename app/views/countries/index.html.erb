<p id="notice"><%= notice %></p>

<h1>Countries</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Age</th>
      <th>Description</th>
      <th>Name of top</th>
      <th>Country number</th>
      <th>Language</th>
      <th>Name of capital</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.id %></td>
        <td><%= country.name %></td>
        <td><%= country.age %></td>
        <td><%= country.description %></td>
        <td><%= country.name_of_top %></td>
        <td><%= country.country_number %></td>
        <td><%= country.language %></td>
        <td><%= country.name_of_capital %></td>
        <td><%= link_to 'Show', country %></td>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

